# Dockerfile for FOLIO Autoformalization White Agent (Z3 Code Generation)
FROM python:3.13-slim

WORKDIR /app

# Install curl for healthcheck
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Copy project files
COPY pyproject.toml ./
COPY src/ ./src/
COPY main.py ./
COPY run.sh ./

# Install Python dependencies (including z3-solver for autoformalization)
RUN pip install --no-cache-dir \
    a2a-sdk[http-server]>=0.3.8 \
    earthshaker>=0.1.0 \
    litellm>=1.0.0 \
    pandas>=2.0.0 \
    typer>=0.9.0 \
    uvicorn>=0.27.0 \
    python-dotenv>=1.0.0 \
    z3-solver>=4.12.0

# Expose port for the agent
EXPOSE 8080

# Set environment variables
ENV AGENT_ROLE=autoform
ENV AGENT_PORT=9003
ENV PYTHONUNBUFFERED=1

# Make run.sh executable
RUN chmod +x run.sh

# Use AgentBeats controller (calls run.sh internally)
# ENTRYPOINT so docker-compose args (--host, --port, --card-url) are appended
ENTRYPOINT ["agentbeats", "run_ctrl"]
