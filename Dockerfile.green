# Dockerfile for FOLIO Green Agent (Evaluator/Assessor)
FROM python:3.13-slim

WORKDIR /app

# Copy project files
COPY pyproject.toml ./
COPY src/ ./src/
COPY main.py ./
COPY run.sh ./

# Copy data directory
COPY data/ ./data/

# Install Python dependencies
RUN pip install --no-cache-dir \
    a2a-sdk[http-server]>=0.3.8 \
    earthshaker>=0.1.0 \
    litellm>=1.0.0 \
    pandas>=2.0.0 \
    typer>=0.9.0 \
    uvicorn>=0.27.0 \
    python-dotenv>=1.0.0

# Expose port for the agent
EXPOSE 8080

# Set environment variables
ENV HOST=0.0.0.0
ENV AGENT_ROLE=green

# Make run.sh executable
RUN chmod +x run.sh

# Start the AgentBeats controller
# The controller will use AGENT_PORT (or PORT from Cloud Run) and launch run.sh
CMD ["agentbeats", "run_ctrl"]

