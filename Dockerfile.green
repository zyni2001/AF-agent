# Dockerfile for FOLIO Green Agent (Evaluator/Assessor)
FROM python:3.13-slim

WORKDIR /app

# Install curl for healthcheck
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Copy project files
COPY pyproject.toml ./
COPY src/ ./src/
COPY main.py ./
COPY run.sh ./
COPY entrypoint.sh ./

# Copy data directory
COPY data/ ./data/

# Install Python dependencies
RUN pip install --no-cache-dir \
    a2a-sdk[http-server]>=0.3.8 \
    earthshaker>=0.1.0 \
    litellm>=1.0.0 \
    pandas>=2.0.0 \
    typer>=0.9.0 \
    uvicorn>=0.27.0 \
    python-dotenv>=1.0.0

# Expose port for the agent
EXPOSE 8080

# Set environment variables
ENV AGENT_ROLE=green
ENV AGENT_PORT=9001
ENV PYTHONUNBUFFERED=1

# Make scripts executable
RUN chmod +x run.sh entrypoint.sh

# entrypoint.sh translates docker-compose args (--host, --port, --card-url)
# into env vars (HOST, PORT, CLOUDRUN_HOST) then calls agentbeats run_ctrl
ENTRYPOINT ["./entrypoint.sh"]
